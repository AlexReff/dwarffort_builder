{
    "extends": "tslint:recommended",
    "rules": {
        "indent": [true, "spaces", 4],
        "max-line-length": false,
        "typedef": false,
        "comment-format": false,
        "no-var-requires": false,
        "max-classes-per-file": false,
        "member-access": false,
        "object-literal-sort-keys": false,
        "variable-name": {
            "options": [
                "ban-keywords",
                "check-format",
                "allow-leading-underscore",
                "allow-pascal-case"
            ]
        }
    }
}